*  Descripci칩n del programa: El problema que nos plantean es: 1 led que haga distintos modos.
*  Hardware necesario: 1 leds, 1 bot칩n, 4 cables
*/

int switchState = 0;
int yellowPin = 7;
int buttonPin = 4;

void setup() {
 pinMode(yellowPin, OUTPUT);
 pinMode(buttonPin, INPUT);
 
}

void loop() {
   switchState = digitalRead(buttonPin);
   if (switchState == HIGH){
   digitalWrite(yellowPin, HIGH);
   }
   else if (switchState == HIGH){
    digitalWrite(yellowPin, HIGH);
    delay (1000);
    digitalWrite(yellowPin, LOW);
    delay (1000);
   }
   else if (switchState == HIGH){
    digitalWrite(yellowPin, HIGH);
    delay (500);
    digitalWrite(yellowPin, LOW);
    delay (500);
   }
   else if (switchState == HIGH){
   digitalWrite(yellowPin, LOW);
   }

}
